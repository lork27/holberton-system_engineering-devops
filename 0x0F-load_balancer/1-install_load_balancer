#!/usr/bin/env bash
#install and configure haproxy loadbalancer
echo "frontend Local_Server
    bind *:80
    mode http
    default_backend hbtn_backend

backend hbtn_backend
    balance roundrobin
    server web1 35.196.44.201:80 check
    server web2 18.208.171.12:80 check" >> /etc/haproxy/haproxy.cfg
service haproxy restart
